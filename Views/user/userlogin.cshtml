}


        .container {
            width: 100%;
            height: 100vh;
            background-image: linear-gradient(rgba(0, 0, 50, 0.8), rgba(0, 0, 50, 0.8)), url('/assets/img/pro2.jpg');
            background-position: center;
            background-size: cover;
            position: relative;
        }
        .form-box {
            width: 90%;
            max-width: 380px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: #fff;
            padding: 30px 35px 20px;
            text-align: center;
        }
        .form-box form{padding-top: 2rem;}

        .form-box h1 {
            font-size: 22px;
            margin-bottom: 15px;
            color: #3c00a0;
            position: relative;
        }
        .form-box h1::after {
            content: "";
            width: 30px;
            height: 4px;
            border-radius: 3px;
            background: #3c00a0;
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
        }

        .input-field {
            background: #eaeaea;
            margin: 8px 0;
            border-radius: 3px;
            display: flex;
            align-items: center;
            height: 45px;
        }
        input {
            width: 100%;
            background: transparent;
            border: 0;
            outline: 0;
            padding: 8px 12px;
            font-size: 13px;
        }
        .input-field i {
            margin-left: 10px;
            color: #999;
        }

        form p {
            text-align: center;
            font-size: 12px;
            margin: 5px 0;
        }
        form p a {
            text-decoration: none;
            color: #3c00a0;
        }

        .btn-field {
            width: 100%;
            display: flex;
            justify-content: center;
            margin-top: 5px;
        }

        .btn-field button {
            width: 100%;
            background: #3c00a0;
            color: #fff;
            height: 35px;
            border-radius: 20px;
            border: 0;
            outline: 0;
            cursor: pointer;
            transition: background 1s;
        }

        .btn-field button.disable {
            background: #eaeaea;
            color: #555;
        }

        .input-group {
            height: 180px;
        }

        .base {
            margin-top: 10px;
        }

         .alert {
            padding: 15px;
            margin: 10px 0;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
        }
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
    </style>
    <!-- Link to Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="form-box">
            <h1>Sign in</h1>
            @* @if (existinguser !=null){
                if (existinguser.ToString().Contains("Successfully"))
    {
        <div class="alert alert-success">
            @existinguser
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            @existinguser
        </div>
    }
             
            } *@



             @if (ViewData["Message"] != null)
            {
                var message = ViewData["Message"].ToString();
                if (message.Contains("Successfully"))
                {
                    <div class="alert alert-success">
                        @message
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        @message
                    </div>
                }
            }
            
            <form id="login" action="" method="post"  autocomplete="off" >
                <div class="input-group">
                    <div class="input-field">
                        <!-- Using Font Awesome icon for user -->
                        <i class="fas fa-user"></i>
                        <input type="text" name="username" placeholder="Username" autocomplete="off" required />
                    </div>
                    <div class="input-field">
                        <!-- Using Font Awesome icon for lock -->
                        <i class="fas fa-lock"></i>
                        <input type="password" name="password" placeholder="Password" autocomplete="new-password" required />
                    </div>
                    <p>Lost Password?<a href="#"> Click Here</a></p>
                </div>

                <div class="base">
                    <div class="btn-field">
                        <button type="submit">Sign in</button>
                    </div>
                    @* <p style="margin-top: 1rem;">Not registered? <a href="//Register">Sign up</a></p> *@
                </div>
            </form>
        </div>
    </div>
    <script>
    window.onload = function() {
        var form = document.querySelector('form');
        var inputs = form.querySelectorAll('input');
        
        inputs.forEach(function(input) {
            input.value = ''; // Clear previous values
        });
    }
</script>
<script>
        var f = document.querySelector('#login');
    f.addEventListener('submit', e => {
      e.preventDefault();
</script>
</body>
</html>
